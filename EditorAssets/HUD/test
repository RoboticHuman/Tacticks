     function selectModule(){
    		var selected = 0;
    		$('#Add').dialog({
    		  buttons: {
    		    "First": function() {
    		      selected = 1;
    		    },
    		    "Second": function() {
    		      selected = 2;
    		    },
    		    "Third": function() {
    		      selected = 3;
    		    },
    		    "Fourth": function() {
    		      selected = 4;
    		    }
    		  }
    		});
     }



     $(document).ready(function(){
